<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.youcheyihou.library.view.progressbar.CircularProgressBar
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        app:cpb_color="@color/color_c1"
        app:cpb_stroke_width="@dimen/dimen_3dp"
        app:style_normal="true" />

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:text="@string/load_more_loading"
        android:textColor="@color/recycler_load_more" />
</LinearLayout>